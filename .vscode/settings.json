{
    "C_Cpp.exclusionPolicy": "checkFilesAndFolders",
    "C_Cpp.loggingLevel":"Debug",
    "C_Cpp.formatting": "clangFormat",
    "C_Cpp.clang_format_style": "Google",

    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/README*": true,
        "**/NEWS*": true,
        "**/AUTHORS": true,
        "**/.gitlab**": true,
        "**/.clang-format": true,
        "**/.dir*": true,
        "**/.editorconfig": true,
        "**/m4macros": true,
        "**/subprojects": true,
        "**/po": true,
        "**/*.py": true,
        "**/*.sh": true,
        "**/*.xml": true,
        "**/docs": true,
        "template*": true,
        "*.md": true,
        "*.in": true,
        "*.txt": false,
        "glib.*": true,
        "**/COPYING": true,
        "**/HACKING": true,

        "**/fuzzing": true,
        "**/tests": true,
        "**/gio/kqueue": true,
        "**/gio/win32": true,
        "**/gio/fam": true,
        "**/gio/completion": true,
        "**/gio/gdbus-2.0": true,
        "**/gio/gwin32*": true,
        "**/glib/gnulib": true,
        "**/glib/libcharset": true,
        "**/glib/glib-mirroring-tab": true,
        "**/glib/dirent": true,
        "**/glib/gwin32*": true,
        "**/gthread": true,
        "**/gmodule/gmodule-*": true,
    },

    "C_Cpp.files.exclude": {
        "**/.vscode": true,
        "/usr/include/c++/": true,
        "/usr/include/glib-2.0": true,

        "**/fuzzing": true,
        "**/tests": true,
        "**/gio/kqueue": true,
        "**/gio/win32": true,
        "**/gio/fam": true,
        "**/gio/completion": true,
        "**/gio/gdbus-2.0": true,
        "**/gio/gwin32*": true,
        "**/glib/gnulib": true,
        "**/glib/libcharset": true,
        "**/glib/glib-mirroring-tab": true,
        "**/glib/dirent": true,
        "**/glib/gwin32*": true,
        "**/gthread": true,
        "**/gmodule/gmodule-*": true,
    }
}